{% extends '::base.html.twig' %}

{% block body -%}
    <ol class="breadcrumb">
        <li><a href="{{ path('rudak_main_admin') }}">Administration</a></li>
        <li><a href="{{ path('admin_cms_page') }}">Liste des pages</a></li>
        <li class="active">Voir une page</li>
    </ol>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Contenu</th>
            <td>{{ entity.content }}</td>
        </tr>
        <tr>
            <th>Cr√©ation</th>
            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Derniere modification</th>
            <td>{{ entity.lastModifiedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Hit</th>
            <td>{{ entity.hit }}</td>
        </tr>
        <tr>
            <th>Public</th>
            <td>{% if entity.public %}Oui{% else %}Non{% endif %}</td>
        </tr>
        </tbody>
    </table>


    <p>
        <a href="{{ path('admin_cms_page_edit', { 'id': entity.id }) }}" class="btn btn-primary">
            Modifier
        </a>
    </p>
    {{ form(delete_form) }}

{% endblock %}
